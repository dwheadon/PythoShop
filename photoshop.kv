#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window


<FileChooserDialog>:
    file_chooser: file_chooser
    BoxLayout:
        size: root.size
        orientation: "vertical"
        FileChooserIconView:
            id: file_chooser
            # rootpath: os.path.expanduser('~')
            filters: ['*.png', '*.jpg']
        Button:
            size_hint_max_y: 40
            text: 'Open'
            on_release: root.open(file_chooser.selection)



<PhotoShopWidget>:
    zoomer: zoomer
    FloatLayout:
        size: root.size
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'data/images/background.jpg'
                size: self.size

        BoxLayout:
            Scatter:
                id: zoomer
                # size_hint: 1, 1
                scale: 1
                # valign: 'bottom'
                # halign: 'left'
                padding: 0
                margin: 10
                zindex: 100
                do_rotation: False
                auto_bring_to_front: False
                # canvas: 
                #     Color:
                #         rgb: 1, 0, 0
                #     Rectangle:
                #         size: self.size
        BoxLayout:
            padding: 10
            spacing: 10
            size_hint: 1, None
            pos_hint: {'top': 1}
            height: 60
            # canvas: 
            #     Color:
            #         rgb: 0, 1, 0
            #     Rectangle:
            #         size: self.size
            Image:
                size_hint: None, None
                size: 24, 24
                source: 'data/logo/kivy-icon-24.png'
            Label:
                height: 24
                text_size: self.width, None
                color: (1, 1, 1, .8)
                text: 'PythoShop'
            Button:
                size_hint_max_x: 100
                size_hint_min_y: 100
                text: 'No Red'
                on_release: root.run_code('remove_red')
            Button:
                size_hint_max_x: 100
                size_hint_min_y: 100
                text: 'Load'
                on_release: root.load_image()
