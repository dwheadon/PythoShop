#:kivy 1.0
#:import kivy kivy
#:import win kivy.core.window


<FileChooserDialog>:
    file_chooser: file_chooser
    BoxLayout:
        size: root.size
        orientation: "vertical"
        FileChooserIconView:
            id: file_chooser
            filters: ['*.png', '*.jpg']
        Button:
            size_hint_max_y: 40
            text: 'Open'
            on_release: root.open(file_chooser.selection)



<PhotoShopWidget>:
    zoomer: zoomer
    filter_button: filter_button
    tool_button: tool_button
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                source: 'data/images/background.jpg'
                size: self.size

        BoxLayout:
            padding: 10
            spacing: 10
            size_hint: 1, None
            # pos_hint: {'top': 1}
            height: 60
            # canvas: 
            #     Color:
            #         rgb: 0, 1, 0
            #     Rectangle:
            #         size: self.size
            Button:
                size_hint_max_x: 120
                size_hint_min_y: 100
                text: 'Load'
                on_release: root.load_image()
            Button:
                id: tool_button
                text: 'select a tool'
            Button:
                id: filter_button
                text: 'select a manipulation'
            Button:
                size_hint_max_x: 100
                size_hint_min_y: 100
                text: 'Apply'
                on_release: root.apply_filter()
            Button:
                size_hint_max_x: 120
                size_hint_min_y: 100
                text: 'Save'
                on_release: root.save_image()


        BoxLayout:
            zindex: 100
            padding: 10
            # canvas:
            #     Color:
            #         rgb: 0, 1, 0
            Scatter:
                id: zoomer
                height: self.height
                # size_hint: 1, 0.9
                scale: 1
                # valign: 'bottom'
                # halign: 'left'
                # padding: 10
                # margin: 10
                zindex: 100
                do_rotation: False
                auto_bring_to_front: False
